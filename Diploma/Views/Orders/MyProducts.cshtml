@model IEnumerable<Diploma.Models.Order>

@{
    ViewData["Title"] = "Моите продукти";
}

<h1>Моите продукти</h1>

<table class="table">
    <thead>
        <tr>
            <th>Продукт</th>
            <th>Цена</th>
            <th>Бройка</th>
            <th>Снимка</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>@item.Product.Stock</td>
                <td><img src="@item.Product.ImageUrl" style="max-width: 50%; height: 200px;" /></td>
            </tr>
        }
    </tbody>
</table>